{
  "name": "citespy",
  "displayName": "CiteSpy",
  "description": "Effortless research paper search at your fingertips",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "CiteSpy.openSidebar",
        "title": "Open CiteSpy Sidebar"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "citeSpy",
          "title": "CiteSpy",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "citeSpy": [
        {
          "type": "webview",
          "id": "citeSpyView",
          "name": "CiteSpy"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
